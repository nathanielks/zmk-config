#!/usr/bin/env bash

PRISTINE="${1}"
PRISTINE_FLAGS=
if [[ -n "$PRISTINE" ]]; then
  PRISTINE_FLAGS="-p"
fi

pushd /workspaces/zmk/app
west build $PRISTINE_FLAGS -d build/left -b nice_nano_v2 -- -DSHIELD=kyria_left -DZMK_CONFIG=/workspaces/zmk-config/config
west build $PRISTINE_FLAGS -d build/right -b nice_nano_v2 -- -DSHIELD=kyria_right -DZMK_CONFIG=/workspaces/zmk-config/config
popd
